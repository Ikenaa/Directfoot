<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liveLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/top_jours">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:tag="day1"
                    android:id="@+id/day1"
                    android:textColor="@color/white"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPast7" />

                <Button
                    android:tag="day2"
                    android:id="@+id/day2"
                    android:textColor="@color/white"

                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPast6" />

                <Button
                    android:tag="day3"
                    android:id="@+id/day3"
                    android:textColor="@color/white"

                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPast5" />

                <Button
                    android:tag="day4"
                    android:id="@+id/day4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPast4" />

                <Button
                    android:tag="day5"
                    android:id="@+id/day5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPast3" />

                <Button
                    android:tag="day6"
                    android:id="@+id/day6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPast2" />

                <Button
                    android:tag="day7"
                    android:id="@+id/day7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPast1" />

                <Button
                    android:tag="day8"
                    android:id="@+id/day8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today" />

                <Button
                    android:tag="day9"
                    android:id="@+id/day9"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPlus1" />

                <Button
                    android:tag="day10"
                    android:id="@+id/day10"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPlus2" />

                <Button
                    android:tag="day11"
                    android:id="@+id/day11"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPlus3" />

                <Button
                    android:tag="day12"
                    android:id="@+id/day12"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPlus4" />

                <Button
                    android:tag="day13"
                    android:id="@+id/day13"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPlus5" />

                <Button
                    android:tag="day14"
                    android:id="@+id/day14"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPlus6" />

                <Button
                    android:tag="day15"
                    android:id="@+id/day15"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daysPlus7" />
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/compet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>