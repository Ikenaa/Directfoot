<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/match_cmp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ligue_1_button_logo"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/logo_ligue"
                    android:maxHeight="125dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/logo_ligue1" />

                <Button
                    android:id="@+id/ligue_1_button_text"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ligue 1"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/premier_league_button_logo"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/logo_ligue"
                    android:maxHeight="125dp"
                    android:scaleType="fitCenter"
                    android:textColor="@color/white"

                    app:srcCompat="@drawable/logo_premier_league" />

                <Button
                    android:id="@+id/premier_league_button_text"
                    style="?android:attr/buttonBarButtonStyle"

                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Premier League"
                    android:textColor="@color/white"

                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/serie_a_button_logo"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/logo_ligue"
                    android:maxHeight="125dp"
                    android:scaleType="centerInside"

                    app:srcCompat="@drawable/logo_serie_a" />

                <Button
                    android:id="@+id/serie_a_button_text"
                    android:backgroundTint="#00FFFFFF"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="Serie A"
                    android:textColor="@color/white"

                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bundesliga_button_logo"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/logo_ligue"
                    android:maxHeight="125dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/logo_bundesliga" />

                <Button
                    android:id="@+id/bundesliga_button_text"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Bundesliga"
                    android:textColor="@color/white"

                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/liga_button_logo"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/logo_ligue"

                    android:maxHeight="100dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/logo_liga" />

                <Button
                    android:id="@+id/liga_button_text"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Liga"
                    android:textColor="@color/white"

                    android:textSize="35sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>